{
  "name": "heroku_browserify_starter",
  "engines": {
    "node": "10.x"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "start": "node index.js",
    "test": "node test.js",
    "build": "NODE_ENV=production browserify src/index.js | uglifyjs -cm > public/bundle.js",
    "watch": "watchify src/index.js -o public/bundle.js -dv"
  },
  "dependencies": {
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "watchify": "^3.11.0"
  }
}
